@model IEnumerable<CarParkingSystem.Models.ParkingSpace>
@{
    ViewBag.Title = "CheckIn";
}


@*Floor HTML*@
<div class="shFloor" style="position: center; padding: 0;">
    <img style="width: 60%; position: relative;" src="~/Image/Group 9.png" />

    <div class="float">

        @{
            int i = 0;

            int[] fn = new int[4] { 1, 2, 3, 4 };
            int fc = 0;
            string[] s = new string[4] { "a", "b", "c", "d" };
            int sc = 0;
            foreach (var item in Model)
            {

                if (i < 9)
                {
                    if (item.Status == true)
                    {
                        <a class="@((s[sc] + Convert.ToInt32(i + 1)))" href="../../CheckIn/CheckInFinal?SId=@item.Id" class="btn btn-primary">@item.PSName</a>
                        i++;
                    }
                    else
                    {
                        <a class="@((s[sc] + Convert.ToInt32(i + 1))) activated" href="#">@item.PSName</a>
                        i++;
                    }
                }
                else
                {
                    if (item.Status == true)
                    {
                        <br />
                        <a class="@((s[sc] + Convert.ToInt32(i + 1)))" href="../../CheckIn/CheckInFinal?SId=@item.Id" class="btn btn-primary">@item.PSName</a>
                        i = 1;
                        fc++;
                        sc++;

                    }
                    else
                    {
                        <br />
                        <a class="@((s[sc] + Convert.ToInt32(i + 1)))" href="#" class="btn btn-danger">@item.PSName</a>
                        i = 1;
                        fc++;
                        sc++;

                    }
                }

            }

        }
        <a class="c10" href="#">D1</a>
        <a class="d2" href="#">D2</a>
        <a class="d3" href="#">D3</a>
        <a class="d4" href="#">D4</a>
        <a class="d5" href="#">D5</a>
        <a class="d6" href="#">D6</a>
        <a class="d7" href="#">D7</a>
        <a class="d8" href="#">D8</a>
        <a class="d9" href="#">D9</a>
    </div>

</div>



 
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
